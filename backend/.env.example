# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration (placeholder for future Prisma setup)
DATABASE_URL="postgresql://username:password@localhost:5432/group_planner"

# Redis Configuration (placeholder for future caching)
REDIS_URL="redis://localhost:6379"

# JWT Configuration - REQUIRED FOR SECURITY
# Generate a secure random secret with: openssl rand -base64 64
# Must be at least 32 characters. The application will fail to start without this.
JWT_SECRET=""
JWT_EXPIRES_IN=7d
JWT_ISSUER="group-planner-api"
JWT_AUDIENCE="group-planner-client"

# Admin Access Configuration
# Comma-separated list of admin email addresses
ADMIN_EMAILS="admin@yourcompany.com,owner@yourcompany.com"
# Comma-separated list of admin user IDs (alternative to emails)
ADMIN_USER_IDS="user-id-1,user-id-2"

# Email Configuration (placeholder for future email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application Configuration
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
# Comma-separated list of trusted proxy IP addresses (prevents IP spoofing)
# Only these IPs can send X-Forwarded-For headers that will be trusted
TRUSTED_PROXIES="10.0.0.1,192.168.1.1"
# Allow forwarded headers in development for testing (DO NOT set to true in production)
ALLOW_FORWARDED_IN_DEV=false