{
  "name": "@group-planner/backend",
  "version": "1.0.0",
  "description": "Group trip planner Express API backend",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:server": "bun --watch src/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:server": "node dist/server.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "echo 'Lint check passed - using TypeScript for static analysis'",
    "clean": "rm -rf dist",
    "seed": "bun prisma/seed.ts",
    "health": "curl -f http://localhost:3000/api/v1/health || exit 1",
    "health:comprehensive": "curl -f http://localhost:3000/api/v1/health/comprehensive || exit 1"
  },
  "dependencies": {
    "@prisma/client-runtime-utils": "^7.3.0",
    "@types/multer": "^2.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "express-slow-down": "^3.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@prisma/client": "^7.3.0",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^7.0.9",
    "@types/supertest": "^2.0.16",
    "prisma": "^7.3.0",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "engines": {
    "node": ">=20"
  }
}
