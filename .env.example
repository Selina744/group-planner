# Group Planner Environment Configuration
# Copy this file to .env and update values for your environment

# ===== DATABASE CONFIGURATION =====
# PostgreSQL database connection
DATABASE_URL="postgresql://username:password@localhost:5432/group_planner_dev"

# ===== REDIS CONFIGURATION =====
# Redis for session storage, caching, and real-time features
REDIS_URL="redis://localhost:6379"

# ===== JWT AUTHENTICATION =====
# Secret for signing JWT tokens (generate a strong random string)
JWT_SECRET="your-super-secret-jwt-key-min-256-bits"
# Access token expiry (15 minutes recommended)
JWT_ACCESS_EXPIRY="15m"
# Refresh token expiry (30 days)
JWT_REFRESH_EXPIRY="30d"

# ===== EMAIL CONFIGURATION =====
# SMTP settings for transactional emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM_NAME="Group Planner"
SMTP_FROM_EMAIL="noreply@groupplanner.app"

# ===== APPLICATION SETTINGS =====
# Base URL for the application
APP_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# CORS origins (comma-separated for multiple origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Node environment
NODE_ENV="development"

# ===== LOGGING =====
LOG_LEVEL="debug"

# ===== FILE UPLOAD =====
# Max file size in bytes (10MB default)
MAX_FILE_SIZE="10485760"
# Upload directory
UPLOAD_DIR="./uploads"

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds
RATE_LIMIT_MAX="100"        # max requests per window

# ===== FRONTEND-SPECIFIC VARIABLES =====
# These are used by the frontend build process
VITE_API_URL="http://localhost:3001"
VITE_APP_NAME="Group Planner"
VITE_ENABLE_DEVTOOLS="true"

# ===== DEVELOPMENT TOOLS =====
# Enable debug features in development
DEBUG_MODE="true"
ENABLE_QUERY_LOGGING="false"

# ===== OPTIONAL INTEGRATIONS =====
# Add these when implementing specific features

# Google OAuth (if implementing Google login)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# AWS S3 (if implementing file storage)
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_BUCKET="group-planner-uploads"

# Push notifications (if implementing mobile notifications)
# FCM_SERVER_KEY="your-fcm-server-key"
# VAPID_PUBLIC_KEY="your-vapid-public-key"
# VAPID_PRIVATE_KEY="your-vapid-private-key"